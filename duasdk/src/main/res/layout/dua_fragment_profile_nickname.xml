<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:singleLine="true"
        android:textSize="30dp"
        android:text="@string/dua_prompt_laststep"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:singleLine="true"
        android:textSize="30dp"
        android:text="这里放上一个上传头像的控件"/>



    <EditText
        android:id="@+id/dua_et_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:hint="@string/dua_prompt_nickname"
        android:background="@null"
        android:inputType="textPassword"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:singleLine="true"
        android:textSize="@dimen/input_text_size"
        />

    <Button
        android:id="@+id/dua_register_button_pick_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/btn_register_bg"
        android:text="@string/confirm"
        android:textSize="@dimen/label_text_size"
        android:textStyle="bold" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/dua_button_last_step"
            android:id="@+id/dua_register_button_last_step"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/dua_button_complete"
            android:id="@+id/dua_register_button_complete"/>
    </RelativeLayout>
</LinearLayout>