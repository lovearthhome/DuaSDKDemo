<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.DuaFragmentRegister">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <EditText
            android:id="@+id/dua_reset_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:hint="@string/dua_prompt_newpwd"
            android:background="@null"
            android:inputType="textPassword"
            android:gravity="center_vertical"
            android:paddingLeft="10sp"
            android:singleLine="true"
            android:textSize="@dimen/input_text_size"
            />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_hide0"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:padding="10dp"
                android:src="@drawable/agt" />

            <ImageView
                android:id="@+id/iv_show0"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:padding="10dp"
                android:src="@drawable/agu"
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/border_line_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <EditText
            android:id="@+id/dua_et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:hint="@string/dua_prompt_renewpwd"
            android:background="@null"
            android:inputType="textPassword"
            android:gravity="center_vertical"
            android:paddingLeft="10sp"
            android:singleLine="true"
            android:textSize="@dimen/input_text_size"
            />

        <!--<TextView-->
        <!--android:id="@+id/dua_tv_password"-->
        <!--android:layout_width="90dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignLeft="@id/dua_et_password"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:text="密码"-->
        <!--android:textColor="#353535"-->
        <!--android:textSize="16sp" />-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_hide"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:padding="10dp"
                android:src="@drawable/agt" />

            <ImageView
                android:id="@+id/iv_show"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:padding="10dp"
                android:src="@drawable/agu"
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>
    <Button
        android:id="@+id/dua_register_button_next_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/btn_register_bg"
        android:text="@string/confirm"
        android:textStyle="bold" />

</LinearLayout>
